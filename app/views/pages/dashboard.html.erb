<h1>Pages#dashboard</h1>
<p>Find me in app/views/pages/dashboard.html.erb</p>



<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Atributos</th>
      <th>Admin</th>
      <th>Edit attributes</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |u| %>
    <tr>
      <td> <%= u.name %> </td>
      <td> <%= u.email %> </td>
      <td> <%= u.admin %> </td>
      <td> <%= link_to 'Edit', edit_user_registration_url(u), class: 'btn btn-sm' %> </td>
      <td> <%= link_to 'Destroy', posts_url(u), method: :delete %> </td>
      <% end %>
    </tr>
  </tbody>
</table>
